<style type="text/css">
	#main {
		background-image:url('/images/background_enter.png');
		height:590px;
	}
	#box {
		background: url('/images/enter_box.png') no-repeat;
		width:677px;
		height:267px;
		margin:100px 0 0 180px;
	}
	#boxContent {
		padding:0 20px 5px 20px;
		color:#3f3f3f;
	}
	#boxContent h1 {
		padding:30px 0 0 45px;
		font-size:48px;
	}
	#boxContent h2 {
		padding:40px 0 0 39px;
	}
	#boxContent P {
		color:#4D4D4D;
		padding:20px 0 0 39px;
	}
	#boxContent A {
		color:#4D4D4D;
		font-weight:500;
	}
	#boxContent A:hover {
		color:#48B76A;
	}
	.textField {
		width:339px;
		height:28px;
		margin:11px 0 0 43px;
	}
	.submitTextField {
		width:80px;
		height:29px;
		position:relative;
		top:-2px;
	}
</style>

<div id="box">
	<div id="boxContent">
		<h2>Enter you beta code</h2>
		<h1>Join Orchive</h1>
		
		<%= text_field_tag('enterBetaCode', '', :class=>"textField") %>
		<%= submit_tag('submit', :class=>'button submitTextField') %>
		
		<p>Don't have a code? <%= link_to('SUCKS FOR YOU!', '/request') %> </p>
	</div>
</div>