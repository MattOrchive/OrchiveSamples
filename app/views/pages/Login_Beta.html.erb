<style type="text/css">
	#main {
		background-image:url('/images/background_betaPages.png');
		height:590px;
	}
	#box {
		background: url('/images/login_box.png') no-repeat;
		width:741px;
		height:337px;
		margin:80px 0 0 150px;
	}
	#boxContent {
		padding:8px 20px 0 20px; 
		color:#3F3F3F;
	}
	#boxContent h1 {
		padding:50px 0 5px 30px;
		font-size:42px;
	}
	#boxContent h2 {
		font-size:23px;
		position:relative;
		top:5px;
	}
	#boxContent div {
		margin:30px 53px 0 0;
		text-align:right;
	}
	#boxContent P {
		color:#4D4D4D;
	}
	#boxContent A {
		color:#4D4D4D;
		font-weight:500;
	}
	#boxContent A:hover {
		color:#48B76A;
	}
	
	.textField {
		position:relative;
		top:2px;
		left:7px;
		width:502px;
		height:28px;
		border:none;
		background:transparent;
		font-size:14px;
	}
	.textField:focus {
		outline-color:#48B76A;
	}
	
	#submit {
		width:90px;
		height:29px;
		
		-webkit-border-radius:3px;
		-moz-border-radius:3px;
		border-radius:3px;

		margin:20px 275px 0 151px;
	}
</style>

<div id="box">
	<div id="boxContent">
		<h1>Beta Member Login</h1>
		<div>
			<label for="username"><h2 class="inline">Username</h2></label>
			<%= text_field_tag('username', '', :class=>'textField') %>
		</div>
		<div>	
			<label for="password"><h2 class="inline">Password</h2></label>
			<%= text_field_tag('password', '', :type=>'password', :class=>'textField') %>
		</div> 
		
			<%= submit_tag('submit', :class=>'button', :id=>'submit') %>
			<%= link_to('Forgot your password?', '#')%>	
			
	</div>
</div>